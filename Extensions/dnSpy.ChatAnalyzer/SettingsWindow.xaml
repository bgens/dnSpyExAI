<Window x:Class="dnSpy.ChatAnalyzer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Analyzer Settings"
        Height="350"
        Width="500"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="OpenAI Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="API Key:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ApiKeyPasswordBox" Grid.Row="2" Margin="0,0,0,15" Height="25"/>
        
        <TextBlock Grid.Row="3" Text="Model:" Margin="0,0,0,5"/>
        <ComboBox x:Name="ModelComboBox" Grid.Row="4" Margin="0,0,0,15" Height="25">
            <ComboBoxItem Content="gpt-5" IsSelected="True"/>
            <ComboBoxItem Content="gpt-5-mini"/>
            <ComboBoxItem Content="gpt-5-nano"/>
            <ComboBoxItem Content="gpt-4"/>
            <ComboBoxItem Content="gpt-4-turbo"/>
        </ComboBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,15">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Max Tokens:" Margin="0,0,0,5"/>
                <TextBox x:Name="MaxTokensTextBox" Width="100" Height="25" Text="4000"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Temperature:" Margin="0,0,0,5"/>
                <TextBox x:Name="TemperatureTextBox" Width="100" Height="25" Text="0.7"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Test Connection" x:Name="TestButton" Width="120" Height="30" Margin="0,0,10,0"/>
            <Button Content="OK" x:Name="OkButton" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" x:Name="CancelButton" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>