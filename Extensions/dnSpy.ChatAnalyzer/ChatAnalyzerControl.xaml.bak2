<UserControl x:Class="dnSpy.ChatAnalyzer.ChatAnalyzerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dnSpy.ChatAnalyzer.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5">
            <TextBox x:Name="ChatHistoryTextBox" 
                     Text="{Binding ChatHistory}" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="11"
                     Background="Transparent"
                     BorderThickness="0"
                     AcceptsReturn="True"
                     VerticalAlignment="Stretch"/>
        </ScrollViewer>

        <!-- Input Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding UserMessage, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalAlignment="Center"
                     MinHeight="60"
                     MaxHeight="120"
                     Margin="0,0,5,0"
                     FontFamily="Segoe UI"
                     FontSize="12">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SendCommand}"/>
                    <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1" 
                    Content="{x:Static local:dnSpy_ChatAnalyzer_Resources.SendButtonText}"
                    Command="{Binding SendCommand}"
                    IsEnabled="{Binding SendCommand.CanExecute}"
                    Width="80"
                    Height="30"
                    Margin="0,0,5,0"
                    Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>

            <Button Grid.Column="2" 
                    Content="{x:Static local:dnSpy_ChatAnalyzer_Resources.ClearButtonText}"
                    Command="{Binding ClearCommand}"
                    Width="80"
                    Height="30"
                    Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="5">
            <Button Content="{x:Static local:dnSpy_ChatAnalyzer_Resources.AnalyzeButtonText}"
                    Command="{Binding AnalyzeSelectedCommand}"
                    IsEnabled="{Binding AnalyzeSelectedCommand.CanExecute}"
                    Height="30"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>

            <!-- Loading Indicator -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Width="20" Height="20" IsIndeterminate="True" Margin="0,0,5,0"/>
                <TextBlock Text="Analyzing..." VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
